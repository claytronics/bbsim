
include #inc/color.meld

type edged(node, min int).
type neighborCount(node, int).
type route neighbor(node, node, int).

!edged(X, N),
N > 1
   -o !setColor2(X, blue).

!neighborCount(X, 1)
   -o !edged(X, 0),
      !setColor2(X, red).

!neighborCount(X, C),
C > 1,
!neighbor(X, Y, _),
!edged(Y, 0)
   -o !edged(X, 1),
      !setColor2(X, yellow).

!neighbor(X, Z, _),
!edged(Z, M)
   -o !edged(X, M + 1).
